{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ES2022"],
		"allowJs": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"typeRoots": ["./node_modules/@types", "./@types"]
	}
}
